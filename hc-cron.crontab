SHELL=/bin/bash
PATH=/sbin:/bin:/usr/sbin:/usr/bin
MAILTO=root
NICE=15

# run-parts
01 * * * * 	root 	!/usr/bin/run-parts /etc/cron.hourly
02 1 * * * 	root 	!/usr/bin/run-parts /etc/cron.daily
02 2 * * 0 	root 	!/usr/bin/run-parts /etc/cron.weekly
02 3 1 * * 	root 	!/usr/bin/run-parts /etc/cron.monthly
